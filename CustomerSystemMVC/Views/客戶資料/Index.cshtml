@model IEnumerable<CustomerSystemMVC.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())       //建立一個Form Tag，點擊 Submit 按鈕時，會將參數與 value 一起傳出去
{
    <p>
        客戶名稱：@Html.TextBox("searchString")
        <input type="submit" value="查詢"/>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("客戶名稱" , "Index" , new { sort = ViewBag.CustomerNameSort })
        </th>
        <th>
            @Html.ActionLink("統一編號", "Index", new { sort = ViewBag.UniqueNumberSort })
        </th>
        <th>
            @Html.ActionLink("電話", "Index", new { sort = ViewBag.PhoneSort })
        </th>
        <th>
            @Html.ActionLink("傳真", "Index", new { sort = ViewBag.FaxSort })
        </th>
        <th>
            @Html.ActionLink("地址", "Index", new { sort = ViewBag.AddressSort })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sort = ViewBag.EmailSort })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
